{
  "name": "v-git-batch",
  "displayName": "Batch Delete GitHub repos",
  "version": "0.0.7",
  "description": "A simple chrome extension to batch delete your github repos.",
  "author": "Aaron Conlon. <rivenqinyy@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package --zip"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "plasmo": "0.88.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://github.com/*"
    ],
    "permissions": [
      "activeTab",
      "tabs",
      "identity",
      "storage",
      "cookies"
    ]
  }
}
